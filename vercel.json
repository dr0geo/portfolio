{
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' 'https://*.vercel.app'; font-src 'self' 'https://*.vercel.app'; img-src 'self' 'self'; script-src 'self' 'https://*.vercel.app'; style-src 'self' 'https://*.vercel.app'"
        },
        {
          "key" : "X-Frame-Options",
          "value" : "DENY"
        },
        {
          "key" : "X-Content-Type-Options",
          "value" : "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer-when-downgrade"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation 'none'"
        },
        {
          "key" : "X-XSS-Protection",
          "value" : "1; mode=block"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=31557600, immutable"
        }
      ]
    },
    {
      "source": "/reset.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31557600, immutable"
        }
      ]
    },
    {
      "source": "/global.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, must-revalidate"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, must-revalidate"
        }
      ]
    },
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, must-revalidate"
        }
      ]
    }
  ]
}
